<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/><cms:raw text=" - "/><cms:text constant="private"/></title>
			<cms:module name="youtube" action="include_api_script"/>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class" id="private">
		<cms:raw file="parts/gtm.txt"/>
		<cms:desktop>
			<header>

				<div class="menu">

					<span class="logo"></span>

					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form_home"
					/>

					<a
						href="'tel:'.urlencode(Language::getText('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="phone"/>
					</a>

				</div>

				<div class="content">
					<h1><cms:text constant="header_private"/></h1>
					<span><cms:text constant="header_desc"/></span>
					<a
						href="url_Make('', 'private-sector#contact')"
						cms:eval="href"
						
						>
					</a>	
				</div>


			</header>
		</cms:desktop>
		<cms:mobile>
			<header>
				<div class="content">
					<h1><cms:text constant="header_private"/></h1>
					<span><cms:text constant="header_desc"/></span>
				</div>

				<div class="menu">
					<a
						href="url_Make('', 'private-sector#contact')"
						cms:eval="href"
						>
					</a>	

					<span class="logo"></span>

					<a
						href="'tel:'.urlencode(Language::getText('phone'))"
						cms:eval="href"
						class="phone"
						>

					</a>

				</div>

			</header>
		</cms:mobile>

			<div class="wrap gradient" id="contact">
				<div class="form_wrap" >
					<h2><cms:text constant="form_title"/></h2>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form_home"
					/>
				</div>

				<cms:module
					name="articles"
					action="show"
					text_id="about_article_home"
					template="parts/article.xml"
				/>

				<cms:module
					name="youtube"
					action="show"
					text_id="green_top"
					template="parts/video.xml"
					/>

			</div>

			<!-- System Section -->
			<div class="wrap white">
				<cms:module
					name="articles"
					action="show"
					text_id="system_article_home"
					template="parts/article.xml"
				/>
			</div>

			<!-- Product -->
			<div class="wrap">
			<cms:desktop>
				<div>
					<span></span>
					<span><cms:text constant="product"/></span>
				</div>

				<cms:module
					name="articles"
					action="show"
					text_id="gauge_article_home"
					template="parts/article.xml"
				/>
			</cms:desktop>
			<cms:mobile>
				<cms:module
					name="articles"
					action="show"
					text_id="gauge_article"
					template="parts/article.xml"
				/>
				<div>
					<span></span>
					<span><cms:text constant="product"/></span>
				</div>

			</cms:mobile>
			</div>

			<!-- Gallery -->
			<div class="clients wrap">

				<cms:module
					name="gallery"
					action="show_group_list"
					container="customers"
					template="parts/groups.xml"
					/>

			</div>

			<!-- system features -->
			<div class="system_feature wrap">

				<h2><cms:text constant="system_feature_title"/></h2>

				<div class="articles">
					<cms:module
						name="articles"
						action="show_group"
						text_id="feature_articles_home"
						template="parts/show_articles.xml"

					/>
				</div>
				<div class="bottom">

					<cms:module
						name="articles"
						action="show"
						text_id="faq_article_home"
						template="parts/article.xml"

					/>

				</div>

			</div>

			<!-- Deals Section -->
			<div class="deals wrap">

				<cms:module
						name="articles"
						action="show"
						text_id="extra_deal"
						template="parts/article.xml"

					/>

				
			</div>

			<div class="wrap blue">
				<span><cms:text constant="header_private"/></span>
				<span><cms:text constant="header_desc"/></span>
			</div>

			<!-- footer Section -->
			<footer>
				<span><cms:text constant="copyright"/></span>
			</footer>

		</body>
	</html>
</document>